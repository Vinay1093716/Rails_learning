<h1>New Appointment</h1>
<%= form_for @appointment do |f| %>
<div>
<%= f.label :doctor_id %>
<%= f.collection_select :doctor_id, Doctor.all, :id, :name %>
</div>
<br>
<br>
<div>
<%= f.label :patient_id %>
<%= f.collection_select :patient_id, Patient.all, :id, :name %>
</div>
<br>
<br>
<div>
<%= f.label :appointment_date %>
<%= f.datetime_select :appointment_date %>
</div>
<br>
<br>
<%= f.submit 'Create Appointment for patient' %>
<% end %>
<%= link_to 'Back', appointments_path %>
